@model PublicProfiler.Models.Social

@{
    ViewData["Title"] = "Edit";
}
@if (User.Identity.IsAuthenticated)
{
<h1>Edit</h1>

<h4>Social Media Info</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SocialId" />
            <div class="form-group">
                <label asp-for="Website" class="control-label"></label>
                <input asp-for="Website" class="form-control" />
                <span asp-validation-for="Website" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SocialMediaURL" class="control-label"></label>
                <input asp-for="SocialMediaURL" class="form-control" />
                <span asp-validation-for="SocialMediaURL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActiveSince" class="control-label"></label>
                <input asp-for="ActiveSince" class="form-control" />
                <span asp-validation-for="ActiveSince" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

}
else
{
        <div class="text-center">
            <h2 class="display-6">Oops.. Looks like you don't have the permission to access this page.</h2>
            <p>Please check if you are logged in.</p>
        </div>
}