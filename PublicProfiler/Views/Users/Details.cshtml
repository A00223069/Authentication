@model PublicProfiler.Models.User

@{
    ViewData["Title"] = "Details";
}

@if (User.Identity.IsAuthenticated)
{

    <h1>Details</h1>

    <div>
        <h4>User Info</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.RealName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RealName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Alias)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Alias)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Birthday)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Birthday)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.UserId">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>

}

else
{
    <div class="text-center">
        <h2 class="display-6">Oops.. Looks like you don't have the permission to access this page.</h2>
        <p>Please check if you are logged in.</p>
    </div>
}